<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.keiji.kchat.ProfileActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_civ"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/profile_display_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Display Name"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:layout_below="@+id/profile_image_civ"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/profile_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_display_name_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Profile Status"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/profile_friendsCount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="friends count "
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/profile_status_tv"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/profile_sendRequest_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/profile_friendsCount_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@android:color/holo_red_light"
        android:padding="10dp"
        android:text="Send Friend Request"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/profile_declineRequest_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_red_light"
        android:padding="10dp"
        android:text="Decline Friend Request"
        android:textColor="@android:color/white"
        android:layout_below="@+id/profile_sendRequest_btn"
        android:layout_alignStart="@+id/profile_sendRequest_btn" />

</RelativeLayout>
