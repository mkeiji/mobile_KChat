<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.keiji.kchat.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_image_civ"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/settings_displayName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="fill_horizontal"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:layout_below="@+id/settings_image_civ"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/settings_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Hello, im using KChat app."
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_below="@+id/settings_displayName_tv"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/settings_changeImage_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_status_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:text="Change Image" />

    <Button
        android:id="@+id/settings_changeStatus_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_changeImage_btn"
        android:layout_centerHorizontal="true"
        android:text="Change Status" />

</RelativeLayout>
